<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Pane prefHeight="400" prefWidth="600"
      style="-fx-background-color: #101d2f"
      stylesheets="@../css/sign-in-page-style.css"
      xmlns="http://javafx.com/javafx/17.0.2-ea"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.hse.brina.signing.SignInController">

    <HBox alignment="CENTER_RIGHT" prefHeight="400" prefWidth="600">
        <VBox alignment="CENTER" prefHeight="600" prefWidth="200">
            <ImageView fitHeight="400" fitWidth="150" preserveRatio="true">
                <Image url="@../assets/icon.jpg"/>
            </ImageView>
        </VBox>

        <VBox prefHeight="600" prefWidth="400" style="-fx-background-color: white;" stylesheets="@../css/sign-in-page-style.css">
            <padding>
                <Insets bottom="24.0" left="20.0" right="20.0" top="24.0" />
            </padding>
            <Label fx:id="welcomeText" alignment="CENTER" styleClass="label" text="Welcome to Text Editor with AI!">
                <padding>
                    <Insets top="20.0" />
                </padding>
            </Label>
            <Label styleClass="small-text">
                <padding>
                    <Insets top="5.0" />
                </padding>
            </Label>
            <StackPane>
                <TextField fx:id="loginField" prefHeight="50" promptText="Username" styleClass="login-field" />
                <TextField fx:id="invalidLoginField" prefHeight="50" styleClass="login-warning-text" text="Enter your login" visible="false" />
            </StackPane>
            <Text text=" " />
            <HBox>
                <StackPane>
                    <PasswordField fx:id="passwordField" prefHeight="50" prefWidth="400" promptText="Password" styleClass="password-field" />
                    <TextField fx:id="openedPasswordField" prefHeight="50" promptText="Password" styleClass="password-field" visible="false" />
                    <TextField fx:id="invalidPasswordField" prefHeight="50" styleClass="password-warning-text" text="Enter your password" visible="false" />
                </StackPane>
                <VBox alignment="CENTER_LEFT" prefHeight="50" prefWidth="80" styleClass="eye-field">
                    <padding>
                        <Insets left="10" right="10" top="5.0" />
                    </padding>
                    <Button fx:id="eyeButton" graphicTextGap="1.0" prefHeight="50" prefWidth="50" styleClass="eye-button">
                        <graphic>
                            <ImageView fx:id="eyeImage" fitHeight="27" fitWidth="27" preserveRatio="true">
                                <Image url="@../assets/closed-eye.png"/>
                            </ImageView>
                        </graphic>
                        <font>
                            <Font size="1.0" />
                        </font>
                    </Button>
                </VBox>
            </HBox>
            <Text text=" " />
            <VBox alignment="CENTER">
                <Button fx:id="signInButton" alignment="CENTER" onAction="#signInButtonClicked" styleClass="dark-button" text="Sign in" />
                <HBox alignment="CENTER" spacing="5" style="--fxbackground-color: white">
                    <padding>
                        <Insets top="5.0" />
                    </padding>
                    <Text styleClass="simple-text" text="Not a member yet?" />
                    <Button fx:id="signUpButton" onAction="#signUpFromInButtonClicked" styleClass="light-button" text="Sign up now" />
                </HBox>
            </VBox>

        </VBox>
    </HBox>
</Pane>